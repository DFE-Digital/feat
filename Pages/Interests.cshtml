@page
@model InterestsModel
@{
    ViewBag.Title = "What courses, subjects, jobs, or careers are you interested in?";
}


@section BeforeContent {
    <govuk-back-link href="@Url.Page(Model.Search.GetBackPage("Interests"))">Back</govuk-back-link>
}

<h1 class="govuk-heading-l">@ViewBag.Title</h1>
<p class="govuk-body">
    You can be as specific as you like. For example:
</p>
<ul class="govuk-list govuk-list--bullet">
    <li>maths</li>
    <li>bricklaying</li>
    <li>working with animals</li>
    <li>something in the public sector</li>
</ul>


<form method="post">
    @for(var interest = 0; interest < Model.Search.Interests.Count; interest++)
    {
        <fieldset class="govuk-fieldset moj-add-another__item">
            <div class="govuk-form-group">
                <govuk-input name="search.interest[@interest]" input-class="govuk-input--width-20" spellcheck="true" value="@Model.Search.Interests[interest]">
                    <govuk-input-label class="govuk-heading-m">
                        Enter an interest
                    </govuk-input-label>
                    <govuk-input-hint>
                        You can enter one thing at a time, then press 'Add another' if you want to include more.<br/>
                        Enter anything from a single word to a full sentence.
                    </govuk-input-hint>
                </govuk-input>
            </div>
            <govuk-button name="Index" value="@interest" asp-page-handler="Remove" type="submit" class="govuk-button govuk-button--secondary moj-add-another__remove-button">Remove</govuk-button>
        </fieldset>
    }
    <fieldset class="govuk-fieldset moj-add-another__item">
       
        <div class="govuk-form-group">
            <govuk-input for="Interest" input-class="govuk-input--width-20" spellcheck="true">
                <govuk-input-label class="govuk-heading-m">
                    Enter an interest
                </govuk-input-label>
                <govuk-input-hint>
                    You can enter one thing at a time, then press 'Add another' if you want to include more.<br/>
                    Enter anything from a single word to a full sentence.
                </govuk-input-hint>
            </govuk-input>
            <govuk-button type="Submit" class="govuk-button--secondary" asp-page-handler="Add">Add another</govuk-button>
        </div>
    </fieldset>

    <govuk-button type="Submit" asp-page-handler="Continue">Continue</govuk-button>
</form>