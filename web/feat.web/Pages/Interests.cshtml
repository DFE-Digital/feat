@page
@using feat.web.Enums
@using feat.web.Extensions
@using feat.web.Models
@model InterestsModel
@{
    ViewBag.Title = "Explore your options after school or college - GOV.UK";
    ViewBag.FixedTitle = "What courses, subjects, jobs, or careers are you interested in?";
    
}


@section BeforeContent {
    <govuk-back-link href="@Url.Page(Model.Search.GetBackPage("Interests"))">Back</govuk-back-link>
}

@{
    int numberofInterests = 3;
}

<h1 class="govuk-heading-l">@ViewBag.FixedTitle</h1>
<p class="govuk-body">
    You can be as specific as you like. For example:
</p>
<ul class="govuk-list govuk-list--bullet">
    <li>maths</li>
    <li>bricklaying</li>
    <li>working with animals</li>
</ul>
<p>If you skip this question, the search results will be everything in your chosen location.</p>

<!--  -->
<form method="post">
    
    <fieldset class="govuk-fieldset moj-add-another__item">
        <div class="govuk-form-group">
            
            @for (int i = 0; i < numberofInterests; i++)
            {
                int icount = i + 1;
                
                <govuk-input name="UserInterests[@i]" input-class="govuk-input--width-20" spellcheck="true"
                             value="@(Model.UserInterests != null && Model.UserInterests.Count > icount ? Model.UserInterests[i] : string.Empty)">
                    <govuk-input-label class="govuk-heading-m">
                        Interest @i @( (icount == 1 && Model.FirstOptionMandatory) ? string.Empty : "(Optional)" )
                    </govuk-input-label>
                </govuk-input>
            }
        </div>
    </fieldset>

    <govuk-button type="Submit" asp-page-handler="Continue">Continue</govuk-button>
</form>