@page
@model feat.web.Pages.IndexModel
@using feat.web.Utils
@{
    ViewBag.Title = "Explore your options after school or college - GOV.UK"; 
    ViewBag.SectionTitle = "Find education and training opportunities";
}


<!-- Index Page content goes here -->
<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-l">@ViewBag.SectionTitle</h2>
            <p>Whether you're already in education or training, or coming back after a break, we can help you work out what to do next.</p>
            
            <govuk-button-link asp-page="location" is-start-button="false">Start now</govuk-button-link>
        </div>
    </div>
</div>
<!-- End Index Page content -->