                        @CourseHours_DisplayName
                      </govuk-checkboxes-fieldset-legend>
                      @{
                        int i = 0;
                        foreach (var attendancePattern in Enum.GetValues<AttendancePattern>())
                        {
                          var isTrue = Model.SelectedCourseHours.Contains(attendancePattern);

                          <govuk-checkboxes-item id="attendancePattern[@i]"
                                                 value="@(attendancePattern.ToString("G"))"
                                                 checked="@(isTrue)">
                            @attendancePattern.ToString() <!-- <>-attendancePattern.GetDisplayName();-->
                          </govuk-checkboxes-item>
                          i++;
                        }
                      }

                    </govuk-checkboxes-fieldset>
                  </govuk-checkboxes>
                </div>
              </fieldset>
              
              <!-- Clear filter-->
              <p style="margin-top: 10px;">
                <a asp-page-handler="ClearFilter" asp-route-filterNumber="CourseHours_DisplayName">Clear filter</a>
                <!--<a href="?">Clear filter</a>-->

              </p>
              <hr/>
            }
            
            <!-- 6) Course study time 'Daytime, Evening, Weekend -->
            
            
            
            @{
              //TODO when server has implemented this
              // Note: swap allFacets to use initial-cached facets; and use allFacets only to tick selected values.
              foreach (var facet in allFacets) 
              {
                string facetName = facet.Name.Trim();
                if (facetName.Equals("DATA_SOURCE", StringComparison.InvariantCultureIgnoreCase) || 
                    facetName.Equals("SECTOR", StringComparison.InvariantCultureIgnoreCase))
                  continue;

                var facetDisplayName = facetName.Replace("_", " ");
                  
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">@facetDisplayName</legend>
                    <div class="govuk-checkboxes govuk-checkboxes--small">
                      
                      @{
                        int j = 0;

                        foreach (var facetValue in facet.Values)
                        {
                          var key = facetValue.Key;
                          if (key.Trim().Equals("nan", StringComparison.InvariantCultureIgnoreCase))
                          {
                            continue;
                          }
                          j++;
                          var valueLng = facetValue.Value;
                          var checkboxId = $"filter-{facetDisplayName}-{j}";
                          
                          <div class="govuk-checkboxes__item">
                            <input class="govuk-checkboxes__input" id="@checkboxId" name="@facetDisplayName" type="checkbox"
                                   value="@facetValue.Value"
                                   checked="@(valueLng % 2 > 1 ? true : false)">
                            <label class="govuk-label govuk-checkboxes__label" for="@checkboxId">@facetValue.Key</label>
                          </div>
                        }
                      }
                    </div>
                    </fieldset>
                <!-- Clear filter-->
                <p style="margin-top: 10px;">
                  <a href="?">Clear filter</a>
                </p>
                <hr/>
              }
