            @{ 
              <!-- 5) Course Hours - AttendancePattern : Full time, Parttime, Flexible  -->
              
              var CourseHours_DisplayName = "Course Hours *"; // get from somewhere if you want it dynamic.

              <fieldset class="govuk-fieldset">
                <!--
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s"><?>CourseHours_DisplayName</legend>
                -->
