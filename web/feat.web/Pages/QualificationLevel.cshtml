@page
@using feat.web.Enums
@using feat.web.Models
@using feat.web.Utils
@model QualificationLevelModel
@{
    ViewBag.Title = SharedStrings.SiteTitle_ExploreYourOptions_GOVUK; 
    ViewBag.BackPageUrl = Url.Page(Model.Search.BackPage);
}

<h1 class="govuk-heading-l">What qualification level are you looking for?</h1>
<p>Most qualifications have a difficulty level. The higher the level, the more difficult. Some qualifications like Apprenticeships or vocational qualifications can be studied at different levels.</p>
<p><a class="govuk-link" href="https://www.gov.uk/what-different-qualification-levels-mean/list-of-qualification-levels" >What qualification levels mean</a></p>

<form method="post">
    
    <govuk-checkboxes for="SelectedQualificationOptions">
        <govuk-checkboxes-fieldset>
            <govuk-checkboxes-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--m">
                Qualification level
            </govuk-checkboxes-fieldset-legend>
            <govuk-checkboxes-hint>
                Select all that apply.
            </govuk-checkboxes-hint>
            @{
                int i = 0;
                foreach (var qualificationLevel in Enum.GetValues<QualificationLevel>())
                {
                    var isTrue = Model.SelectedQualificationOptions.Contains(qualificationLevel);

                    <govuk-checkboxes-item id="qualificationLevel[@i]"
                                           value="@(qualificationLevel.ToString("G"))"
                                           checked="@(isTrue)">
                        @qualificationLevel.GetDisplayName()
                    </govuk-checkboxes-item>
                    i++;
                }
            }

        </govuk-checkboxes-fieldset>
    </govuk-checkboxes>

    <div class="govuk-button-group">
        <govuk-button type="Submit">Continue</govuk-button>
    </div>
</form>