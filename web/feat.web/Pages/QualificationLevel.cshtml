@page
@using feat.web.Enums
@using feat.web.Models
@model QualificationLevelModel
@{
    ViewBag.Title = "Explore your options after school or college - GOV.UK"; 
    ViewBag.SectionTitle = "What qualification level are you looking for?";
}


@section BeforeContent {
    <govuk-back-link href="@Url.Page(Model.Search.GetBackPage(PageName.QualificationLevel))">Back</govuk-back-link>
}

<form method="post">
    
    <h1 class="govuk-heading-l">@ViewBag.SectionTitle</h1>
    <p>Most qualifications have a difficulty level. The higher the level, the more difficult. Some qualifications like Apprenticeships or vocational qualifications can be studied at different levels.</p>
    <p><a class="govuk-link" href="https://www.gov.uk/what-different-qualification-levels-mean/list-of-qualification-levels" target="_blank">What qualification levels mean (opens in new tab)</a></p>
    
    <govuk-checkboxes for="SelectedQualificationOptions" >
        <govuk-checkboxes-fieldset>
            <govuk-checkboxes-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                Qualification level
            </govuk-checkboxes-fieldset-legend>
            <govuk-checkboxes-hint>
                Select all that apply.
            </govuk-checkboxes-hint>
            @{
                int i = 0;
                foreach (var qualificationLevel in Enum.GetValues<QualificationLevel>())
                {
                    var isTrue = Model.SelectedQualificationOptions.Contains(qualificationLevel);
                    
                    <govuk-checkboxes-item id="qualificationLevel[@i]"
                                           value="@(qualificationLevel.ToString("G"))"
                                           checked="@(isTrue)">
                        @qualificationLevel.GetDisplayName();
                    </govuk-checkboxes-item>
                    i++;
                }
            }
            
        </govuk-checkboxes-fieldset>
    </govuk-checkboxes>
    
    <div class="govuk-button-group">
        <govuk-button type="Submit">Continue</govuk-button>
    </div>
</form>