@page
@model SubjectsModel
@{
    ViewBag.Title = "What subjects or courses are you interested in?";
}


@section BeforeContent {
    <govuk-back-link href="@Url.Page(Model.Search.GetBackPage("Subjects"))">Back</govuk-back-link>
}

<h1 class="govuk-heading-l">@ViewBag.Title</h1>
<p class="govuk-body">
    This is optional, but the more you tell us the better your search results will be.
</p>
<p class="govuk-body">
    Add anything you think could help us find you relevant courses. For example:
</p>
<ul class="govuk-list govuk-list--bullet">
    <li>maths</li>
    <li>social sciences</li>
    <li>anything creative</li>
</ul>


<form method="post">
    @for(var subject = 0; subject < Model.Search.Subjects.Count; subject++)
    {
        <fieldset class="govuk-fieldset moj-add-another__item">
            <div class="govuk-form-group">
                <govuk-input name="search.subject[@subject]" input-class="govuk-input--width-20" spellcheck="true" value="@Model.Search.Subjects[subject]" disabled="true">
                    <govuk-input-label class="govuk-heading-m">
                        Enter a subject (optional)
                    </govuk-input-label>
                    <govuk-input-hint>
                        You can enter one thing at a time, then press 'Add another' if you want to include more.<br/>
                        Enter anything from a single word to a full sentence.
                    </govuk-input-hint>
                </govuk-input>
            </div>
            <govuk-button name="Index" value="@subject" asp-page-handler="Remove" type="submit" class="govuk-button govuk-button--secondary moj-add-another__remove-button">Remove</govuk-button>
        </fieldset>
    }
    <fieldset class="govuk-fieldset moj-add-another__item">
       
        <div class="govuk-form-group">
            <govuk-input for="Subject" input-class="govuk-input--width-20" spellcheck="true">
                <govuk-input-label class="govuk-heading-m">
                    Enter a subject (optional)
                </govuk-input-label>
                <govuk-input-hint>
                    You can enter one thing at a time, then press 'Add another' if you want to include more.<br/>
                    Enter anything from a single word to a full sentence.
                </govuk-input-hint>
            </govuk-input>
            <govuk-button type="Submit" class="govuk-button--secondary" asp-page-handler="Add">Add another</govuk-button>
        </div>
    </fieldset>

    <div class="govuk-button-group">
        <govuk-button type="Submit" asp-page-handler="Continue">Continue</govuk-button>
        <a asp-page="Careers" class="govuk-link">Skip this step</a>       
    </div>
</form>