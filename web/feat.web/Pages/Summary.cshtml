@page
@model feat.web.Pages.SummaryModel
@{
    ViewBag.Title = "What you've told us";
}
@section BeforeContent {
    <govuk-back-link href="@Url.Page(Model.Search.GetBackPage("Summary"))">Back</govuk-back-link>
}


<h1 class="govuk-heading-l">@ViewBag.Title</h1>
   
        <p class="govuk-body">Check your answers, and change them if you'd like to, before viewing your search results.</p>
        
        <dl class="govuk-summary-list">
            @if (!string.IsNullOrEmpty(Model.Search.Location))
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Location
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.Search.Location
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="Location">Change<span class="govuk-visually-hidden"> location</span></a>
                    </dd>
                </div>
            }
            @if (Model.Search.Distance.HasValue)
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Travel distance
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.Search.Distance.Value.GetDisplayName()
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="Location">Change<span class="govuk-visually-hidden"> travel distance</span></a>
                    </dd>
                </div>
            }
            
            @if (Model.Search.Interests.Any())
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Interests
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @string.Join(", ", Model.Search.Interests)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="Interests">Change<span class="govuk-visually-hidden"> interests</span></a>
                    </dd>
                </div>
            }
            
            @if (Model.Search.Subjects.Any())
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Subjects
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @string.Join(", ", Model.Search.Subjects)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="Subjects">Change<span class="govuk-visually-hidden"> subjects</span></a>
                    </dd>
                </div>
            }
            
            @if (Model.Search.Careers.Any())
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Careers
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @string.Join(", ", Model.Search.Careers)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="Careers">Change<span class="govuk-visually-hidden"> careers</span></a>
                    </dd>
                </div>
            }
            
            @if (Model.Search.CourseType.HasValue)
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Course preference
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.Search.CourseType.Value.GetDisplayName()
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="CourseType">Change<span class="govuk-visually-hidden"> course preference</span></a>
                    </dd>
                </div>
            }
            
            @if (Model.Search.CourseLevel.HasValue)
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Level you're looking for
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.Search.CourseLevel.Value.GetDisplayName()
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="CourseLevel">Change<span class="govuk-visually-hidden"> level you're looking for</span></a>
                    </dd>
                </div>
            }
            <!--
            if (Model.Search.QualificationLevel.HasValue)
            {
                <div class="govuk-summary-list__row">

                    <dt class="govuk-summary-list__key">
                        Qualification Level
                    </dt>
                    <dd class="govuk-summary-list__value">
                        *-Model.Search.QualificationLevel.Value.GetDisplayName()
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <a class="govuk-link" asp-page="QualificationLevel">Change<span class="govuk-visually-hidden"> qualification level</span></a>
                    </dd>
                </div>
            }
            -->
        </dl>

        <p class="govuk-body">Find out <a href="ai" class="govuk-link">how we use AI</a> to bring you relevant results.</p>
        
        <govuk-button-link asp-page="Results">Search</govuk-button-link>
    
