@section Header {
    <header class="govuk-header" data-module="govuk-header" data-govuk-header-init>
        <div class="govuk-header__container govuk-width-container">
            <div class="govuk-header__logo">
                <a class="govuk-header__link govuk-header__link--homepage" href="/" aria-label="Find Education and Training homepage">
                    <img src="~/assets/images/department-for-education_white.png" alt="Find education and training homepage" class="govuk-header__logotype">
                </a>
            </div>
        </div>
    </header>    
    <govuk-service-navigation service-name="Find education and training" service-url="@Url.Page("Index")"></govuk-service-navigation>
}

@section BeforeContent { 
    <govuk-phase-banner>
        <govuk-phase-banner-tag>Beta</govuk-phase-banner-tag>
        This is a new service. Help us improve it and <a class="govuk-link" href="#">give your feedback (opens in new tab)</a>.
    </govuk-phase-banner>
}

@RenderSection("BeforeContent", required: false)

@RenderBody()

@section Footer {
    <govuk-footer>
        <govuk-footer-nav columns="2" class="govuk-footer__section govuk-grid-column-two-thirds">
