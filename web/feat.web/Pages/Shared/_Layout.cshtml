    <script src="~/js/dfefrontend-2.0.0.min.js" type="module"></script>
    <script src="~/js/moj-frontend.min.js" type="module"></script>
    <script type="module" asp-add-nonce>
        import * as MOJFrontend from '/js/moj-frontend.min.js'
        MOJFrontend.initAll()
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    
    @if (ViewBag.ShowCookieBanner)
    {
        <script asp-add-nonce>
            function acceptCookies(args) {
                document.getElementById("cookieConsent").style.display = "none";
                if (args === true) {
                    createCookie("AnalyticsCookie", "yes");
                    createCookie("MarketingCookie", "yes");
                } else {
                    createCookie("AnalyticsCookie", "no");
                    createCookie("MarketingCookie", "no");
                }
            }
            function createCookie(cookiname, cookivalue) {
                let date = new Date();
                date.setFullYear(date.getFullYear() + 1);
                let expires = "expires=" + date.toGMTString();
                document.cookie =
                    cookiname + "=" + cookivalue + ";" + expires + ";path=/;Secure";
            }
        </script>
    }
}
